{
  "mcpServers": {
    "atlassian": {
      "transport": "stdio",
      "command": "docker",
      "args": [
        "-e", "CONFLUENCE_URL",
        "-e", "CONFLUENCE_USERNAME",
        "-e", "CONFLUENCE_API_TOKEN",
        "-e", "JIRA_URL",
        "-e", "JIRA_USERNAME",
        "-e", "JIRA_API_TOKEN",
        "-e", "REQUESTS_CA_BUNDLE",
        "-e", "NODE_EXTRA_CA_CERTS",
        "-e", "CURL_CA_BUNDLE",
        "-e", "IMAGE_CERTIFICATE_PATH",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ]
    }
  }
}

